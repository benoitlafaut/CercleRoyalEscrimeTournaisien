@{
    var urlCurrent = Model.VideoUrls[Model.CurrentVideo].Url;
    var urlTitle = Model.VideoUrls[Model.CurrentVideo].Title;
}

<html>
<body id="bodyMainPage">

    @Html.HiddenFor(model => model.CurrentVideo)

    @*<div style="display:none;">
            <img src="https://scontent.fbru4-1.fna.fbcdn.net/v/t39.30808-6/373050525_3444870195828949_607076592105404018_n.jpg?stp=c0.27.206.206a_dst-jpg_p206x206&_nc_cat=110&ccb=1-7&_nc_sid=0df3a7&_nc_ohc=IhIFGynyyLUAX92TkWR&_nc_ht=scontent.fbru4-1.fna&oh=00_AfDyBxHDcCczsKUmemaI5QQ62w_WDig9hwWxSnMXDGnDcQ&oe=64FAB046"/>
        </div>*@

    <div style="float:right;">
        <i class="fa fa-bars fa-beat" style="font-size: 30px;" onclick="ShowMenuPrincipal();"></i>
    </div>

    <div>
        <table style=" margin-left: 12%;">
            <tr>
                <td>
                    <div style="border-left: 3px solid #78C0A8; font-size: xx-large; margin-left: 5px;">
                        <span style=" margin-left: 25px;">@urlTitle</span>
                    </div>
                </td>
            </tr>
        </table>
      
        <table id="tableYoutube" style="text-align:center;width:100%">
            <tr>
                <td style="text-align:right"><i onclick="ChangeVideo(-1)" class='classDarkGray fa fa-angle-double-left fa-beat'></i></td>
                <td width="1300" height="600"><iframe style="width: 100%;height: 100%;" id="existing-iframe-example" title="L'escrime" class="iframeVideo" src="@urlCurrent" frameborder="0" allow="autoplay;accelerometer;  clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></td>
                <td style="text-align:left"><i onclick="ChangeVideo(1)" class='classDarkGray fa fa-angle-double-right fa-beat'></i></td>

            </tr>
        </table>

        <table style="margin-left: 12%; width: 75%;">
            <tr>
                <td>
                    <div style="font-size: 20px;text-align: center; border: 1px solid #78C0A8; height: 100px; align-items: center; display: grid; width: 100%;">
                        <span id="textVideo">Vidéo en cours de chargement</span>
                    </div>
                </td>
            </tr>
        </table>

        <script src="https://www.youtube.com/iframe_api"></script>

        <div id="popUp" style=" display: none; position: absolute; width: 100%; top: 0px; left: 0px; height: 100%; background-color: moccasin;" onclick="$('#popUp').fadeOut('slow');">
            <img id="imgModal" src='/Home/photos/Divers/pub.jpg' height="100" width="100" style="width: 100%;height: 100%;object-fit: contain;" />
        </div>
</body>
</html>

<script src='~/Scripts/MainPage.js'></script>


<script>
    $(document).ready(function () {
        if ('@Model.HasPubAlreadyShowed' == 'True') {
            $("#popUp").css('display', 'block');
            setInterval(closeImage, 7000);
        }
    });

    function closeImage() {
        $("#popUp").fadeOut("slow");
    }
</script>