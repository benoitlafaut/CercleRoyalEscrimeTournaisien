<script>
    function clickTR(langue, languageResponsive) {
        $(".StyleFieldset").find('tr').find('span').css('color', 'black');
        $('.fa-play-Benoit').next('span').next('span').css('color', 'black');
        $('#text' + langue).css('color', 'blue');
        responsiveVoice.speak($('#text' + langue).text(), languageResponsive)
    }

    function PreviousSentence() {
        var index = $("#CurrentRowSelected").val();
        index = parseInt(index) - 1;
        $("#CurrentRowSelected").val(index);
        var text = $("#bodyReadEpub20042023").find("#tableReadEpub").find("tr").eq(index).dblclick();

        $("#bodyReadEpub20042023").find("#tableReadEpub").find("tr").css('color', 'black');
        $("#bodyReadEpub20042023").find("#tableReadEpub").find("tr").eq(index).css('color', 'blue');
    }

    function NextSentence() {
        var index = $("#CurrentRowSelected").val();
        index = parseInt(index) + 1;
        $("#CurrentRowSelected").val(index);
        var text = $("#bodyReadEpub20042023").find("#tableReadEpub").find("tr").eq(index).dblclick();

        $("#bodyReadEpub20042023").find("#tableReadEpub").find("tr").css('color', 'black');
        $("#bodyReadEpub20042023").find("#tableReadEpub").find("tr").eq(index).css('color', 'blue');
    }

    function ChangeSquare(element) {
        if ($(element).hasClass('fa-check-square')) {
            $(element).removeClass('fa-check-square').addClass('fa-square');
        }
        else {
            $(element).addClass('fa-check-square').removeClass('fa-square');
        }
    }
</script>

