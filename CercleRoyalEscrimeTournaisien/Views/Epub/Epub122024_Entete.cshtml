@model CercleRoyalEscrimeTournaisien.Models.ModelEpub122024

@{
    var urlConvert = Url.Content("~/Home/Photos/NewEpub28012024/convert.png");
    var urlOpen = Url.Content("~/Home/Photos/NewEpub28012024/open.png");
}

<div id="divMain" class="TreeMainCollapse">
    <div class="glyphicon glyphicon-plus" style="margin-bottom: 10px; background-color: mistyrose;" id="ulToExpandCollapse" onclick="ExpandCollapseNew(this);">
        <i id="iconToListenAll" style="top: 6px;" onclick="StartPlayAllSentence();" class="ClassSound ClassStyleSound fa fa-volume-up" aria-hidden="true"></i>
        <div id="divNextToExpandCollapse" style="display: none; margin-left: 15px; margin-top: 10px;  ">
            <div style="margin-bottom:10px;">
                <span id="SpanConvertEpub" style="font-family: arial;" class="ClassTextNode">
                    <a href="#" class="">Convertir Epub en texte</a>
                </span>
            </div>

            <div style="margin-bottom:10px;">
                <span id="SpanSelectEpub" style="font-family: arial;" class="ClassTextNode">
                    <a href="#" class="">Charger roman format texte</a>
                </span>
            </div>

            <div style="margin-top: 10px; margin-bottom: 17px;">
                <span style="font-family: FontAwesome;">Langue parlée:</span>
                @for (int i = 0; i < Model.CheckBoxLanguageItemsForLanguageDefault.Count; i++)
                {
                    <img height="30" width="30" src="@Url.Content(Model.CheckBoxLanguageItemsForLanguageDefault[i].UrlFlag)" />

                    if (Model.CheckBoxLanguageItemsForLanguageDefault[i].IsSelected)
                    {
                        @Html.RadioButtonFor(model => model.LanguageForLanguageDefaultSelected, Model.CheckBoxLanguageItemsForLanguageDefault[i].Language, new { @style = "margin-left: -8px;margin-right: 9px;", @checked = Model.CheckBoxLanguageItemsForLanguageDefault[i].IsSelected ? "Checked" : "" })
                    }
                    else
                    {
                        @Html.RadioButtonFor(model => model.LanguageForLanguageDefaultSelected, Model.CheckBoxLanguageItemsForLanguageDefault[i].Language, new { @style = "margin-left: -8px;margin-right: 9px;" })
                    }

                    @Html.HiddenFor(m => m.CheckBoxLanguageItemsForLanguageDefault[i].Language);
                }
            </div>

            <div style="font-family: FontAwesome; margin-bottom: 17px;">
                <span>Changer la lecture avec traduction automatique :</span>
                @Html.CheckBoxFor(m => Model.IsLectureWithLangue, new { @onclick = "changeIsLectureWithLangue()" })
            </div>

            <div style="font-family: FontAwesome; margin-bottom: 17px;">
                @for (int i = 0; i < Model.CheckBoxLanguageItemsForTraduceAutomatically.Count; i++)
                {
                    <img height="30" width="30" src="@Url.Content(Model.CheckBoxLanguageItemsForTraduceAutomatically[i].UrlFlag)" />

                    @Html.CheckBoxFor(model => model.CheckBoxLanguageItemsForTraduceAutomatically[i].IsSelected, new { @style= "    margin-right: 13px;" })

                    @Html.HiddenFor(m => m.CheckBoxLanguageItemsForLanguageDefault[i].Language);
                }

            </div>
        </div>           
    </div>
</div>

<div class="classInputFile">
    <input type="file" title=" " id="inputFile" name="inputFile" style="display:none;" />
</div>