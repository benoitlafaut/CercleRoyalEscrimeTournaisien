<script>    
    function ExpandCollapseNew(element) {
        if ($(element).hasClass('glyphicon-plus')) {
            $("#ulToExpandCollapse").removeClass('glyphicon-plus');
            $("#ulToExpandCollapse").addClass('glyphicon-minus');
            $("#divNextToExpandCollapse").css('display', 'block');
        }
        else {
            $("#ulToExpandCollapse").removeClass('glyphicon-minus');
            $("#ulToExpandCollapse").addClass('glyphicon-plus');
            $("#divNextToExpandCollapse").css('display', 'none');
        }
    }   

    function ChangeFaçonDeLire() {
        if ($("#IsLectureWithLangue:checked").val() == 'true') {
            $("#NombreRowsToShow").val('1');
        }
        else {
            $("#NombreRowsToShow").val('10');
        }

        var inputRange = parseInt($("#inputRange").val());
        ChargerEpub(inputRange);
    }
</script>