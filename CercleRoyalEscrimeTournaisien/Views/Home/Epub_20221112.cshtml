    <link href="~/Content/ExpandView.css" rel="stylesheet" />   
</head>

<script>
    $(document).ready(function () {

        $("body").on('mousedown', function (e) {
            $("#PositionDepartMouse").val(e.pageX);
        });

        $("body").on('mouseup', function (e) {
            var direction = $("#PositionDepartMouse").val() - e.pageX;


            if (direction > 70) {

                changeCurrentLigne_New_112022('true', 'false', '-1');
            }

            if (direction < -70) {
                changeCurrentLigne_New_112022('false', 'true', '-1');
            }
            
        });      

        document.addEventListener('touchstart', e => {
            $("#PositionDepartMouse").val(e.changedTouches[0].screenX);
        })

        document.addEventListener('touchend', e => {
            var direction = $("#PositionDepartMouse").val() - e.changedTouches[0].screenX;

            if (direction > 70) {
                changeCurrentLigne_New_112022('true', 'false', '-1');
            }

            if (direction < -70) {
                changeCurrentLigne_New_112022('false', 'true', '-1');
            }
        })
    });
</script>
@Html.Hidden("PositionDepartMouse")
<audio id="audioElement1" class="fullWidth" controls="controls" src="" style="display:none"></audio>

<div id="cover-spin"></div>

