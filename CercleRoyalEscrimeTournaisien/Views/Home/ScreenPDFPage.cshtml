@using CercleRoyalEscrimeTournaisien.Models;

@model ModelViewEpubFile
@{
    string @cssStyleVisibilityBooksList = Model.NomBD == "Select bd" || Model.NomBD == null ? "display:none" : "";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/2.3.1/css/flag-icon.min.css" rel="stylesheet" />

    <link href="~/Content/ExpandView.css" rel="stylesheet" />
</head>


<div id="ScreenPDFPageDiv">
    @Html.DropDownListFor(m => m.NomBD, new SelectList(Model.NewNomBDList), "Select bd", new { style = "width: 200px;", @onchange = "GetAllUrls(this.value) " })
    @Html.DropDownListFor(m => m.BookSelected, new SelectList(Model.NewBooksListSelect, "Url", "Title"), "Select bd", new { style = "width: 400px;" + @cssStyleVisibilityBooksList, @onchange = "callChangefunc2(this.value) " })

    <div id="divFramePDF">
        <object data="mypdf.pdf" type="application/pdf" width="100%" height="600px" style="padding:20px;">
            <embed id="framePDF" src="" style="position: fixed;width:99%;height:94%">

        </object>
    </div>

</div>

<script src="~/Scripts/ScreenPDFPage.js" type="text/javascript"></script>
